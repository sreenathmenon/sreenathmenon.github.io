    "keywords": [
        "ci",
        "codeigniter",
        "database",
        "ee",
        "expressionengine",
        "illuminate",
        "laravel",
        "orm"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Macneil",
            "email": "adrian@adrianmacneil.com"
        }
    ],
    "autoload": {
        "psr-0": { "Illuminate\\CodeIgniter" : "src/" }
    },
    "require": {
        "illuminate/database": "~4.1.0"
    },
    "require-dev": {
        "mockery/mockery": "~0.7",
        "phpunit/phpunit": "~3.7.0"
    }
